<div class="col-sm-8 col-sm-offset-2 page">
<h1>signup</h1>
<div class="well signupWell">
<form method="POST" action="/auth/signup">
    <div class="form-group">
        <label for="username" class="label">Username</label>
        <input type="text" name="username" class="form-control" placeholder="Create Username">
    </div>
    <div class="form-group">
        <label for="fname" class="label">First Name</label>
        <input type="text" name="fname" class="form-control" placeholder="Type your first name" required>
    </div>
    <div class="form-group">
        <label for="lname" class="label">Last Name</label>
        <input type="text" name="lname" class="form-control" placeholder="Type your last name" required>
    </div>
    <div class="form-group">
        <label for="email"  class="label">Email</label>
        <input type="text" name="email" class="form-control" placeholder="Type your email" required>
    </div>
    <div class="form-group">
        <label for="password"  class="label">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Type your password" required>
    </div>
    <input type="submit" value="continue" class="btnwhite">
</form>
</div>
</div>